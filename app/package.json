{
    "name": "node-server",
    "version": "2.0.0",
    "description": "Node API for openZwave",
    "main": "src/app.ts",
    "nodemonConfig": {
        "exec": "npm run dev",
        "watch": [
            "server/*",
            "public/*"
        ],
        "ignore": [
            "**/__tests__/**",
            "*.test.js",
            "*.spec.js"
        ]
    },
    "scripts": {
        "start": "npm run build && tsc && node ./dist/src/app.js",
        "build": "npm install --unsafe-perm=true --allow-root && tsc",
        "dev": "NODE_ENV=development tsc && node dist/app.js",
        "prod": "NODE_ENV=production npm run build && npm run server",
        "clean": "rimraf dist-server",
        "watch:dev": "npm start"
    },
    "keywords": [
        "zwave",
        "z-wave",
        "home automation",
        "openzwave",
        "open-zwave"
    ],
    "author": "Chris <christopherdubois3@gmail.com>",
    "license": "MIT",
    "dependencies": {
        "@types/amqplib": "^0.8.2",
        "amqplib": "^0.8.0",
        "body-parser": "^1.19.0",
        "compression": "^1.7.4",
        "express": "^4.17.1",
        "helmet": "^3.23.3",
        "moment": "^2.29.1",
        "nodemon": "^2.0.4",
        "npm": "^6.14.8",
        "winston": "^3.3.3",
        "zwave-js": "^8.8.2"
    },
    "devDependencies": {
        "@types/express": "^4.17.13",
        "ts-node": "^10.4.0",
        "typescript": "^4.5.2"
    }
}
