{
  "compileOnSave": true,
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [ "es5", "dom" ],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitAny": false,
    "rootDir": "./",
    "outDir": "./dist",
    "removeComments": false,
    "sourceMap": true,
    "target": "es6",
    "skipLibCheck": true
  },
  "include": [
    "src/"
  ]
}
